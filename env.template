# Automation Platform - Environment Variables Template
# Copy this file to .env and fill in your actual values
# cp env.template .env

# ========================================
# GoLogin Configuration
# ========================================
GOLOGIN_TOKEN=your_gologin_api_token_here

# ========================================
# Database Configuration (Optional)
# ========================================
# For development, services use SQLite by default
# For production, use PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/automation_db
# Or for SQLite (default):
# DATABASE_URL=sqlite:///./automation.db

# ========================================
# Redis Configuration (Optional)
# ========================================
REDIS_URL=redis://localhost:6379/0

# ========================================
# Logging Configuration
# ========================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ========================================
# X Auth Service Configuration
# ========================================
X_AUTH_SERVICE_PORT=8001

# ========================================
# Captcha Solving Services (Optional)
# ========================================
ANTICAPTCHA_API_KEY=your_anticaptcha_key_here
TWOCAPTCHA_API_KEY=your_twocaptcha_key_here
CAPSOLVER_API_KEY=your_capsolver_key_here

# ========================================
# Proxy Configuration (Optional)
# ========================================
ROYAL_PROXY_USERNAME=your_proxy_username
ROYAL_PROXY_PASSWORD=your_proxy_password
ROYAL_PROXY_API_TOKEN=your_proxy_api_token

# ========================================
# Service-to-Service Authentication (Future)
# ========================================
# JWT_SECRET_KEY=your_secret_key_here
# JWT_ALGORITHM=HS256
# JWT_EXPIRATION_MINUTES=60

# ========================================
# Development Settings
# ========================================
ENVIRONMENT=development
DEBUG=true
