# Automation Platform - Environment Variables Template
# Copy this file to .env and fill in your actual values
# cp env.template .env

# ========================================
# GoLogin Configuration
# ========================================
GOLOGIN_TOKEN=your_gologin_api_token_here

# GoLogin Mode: true = Local Orbita browser, false = Cloud browser (default)
# IMPORTANT: If you logged into Instagram accounts using GoLogin's web UI (cloudbrowser.gologin.com),
# you MUST use cloud mode (false) to access those sessions!
GOLOGIN_LOCAL_MODE=false

# ========================================
# Database Configuration (Optional)
# ========================================
# For development, services use SQLite by default
# For production, use PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/automation_db
# Or for SQLite (default):
# DATABASE_URL=sqlite:///./automation.db

# ========================================
# Redis Configuration (Optional)
# ========================================
REDIS_URL=redis://localhost:6379/0

# ========================================
# Logging Configuration
# ========================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ========================================
# X Auth Service Configuration
# ========================================
X_AUTH_SERVICE_PORT=8001

# ========================================
# Instagram Engagement Service Configuration
# ========================================
# Comma-separated GoLogin profile names (not IDs)
GOLOGIN_IG_PROFILES=profile1,profile2,profile3

# Daily limit for likes per profile
IG_DAILY_LIKE_LIMIT=30

# Path to file containing target Instagram accounts (one username per line)
IG_TARGET_ACCOUNTS_FILE=ig_targets.txt

# Number of comments to like per post (fixed)
IG_COMMENTS_TO_LIKE=3

# Number of posts to process per session
IG_POSTS_PER_SESSION=5

# Delay between actions (seconds) - random between min and max
IG_ACTION_DELAY_MIN=3
IG_ACTION_DELAY_MAX=7

# Scheduler check interval (seconds) - default 300 = 5 minutes
IG_SCHEDULER_CHECK_INTERVAL=300

# Database file path (relative to project root)
IG_DATABASE_PATH=ig_engagement.db

# ========================================
# Captcha Solving Services (Optional)
# ========================================
ANTICAPTCHA_API_KEY=your_anticaptcha_key_here
TWOCAPTCHA_API_KEY=your_twocaptcha_key_here
CAPSOLVER_API_KEY=your_capsolver_key_here

# ========================================
# Proxy Configuration (Optional)
# ========================================
ROYAL_PROXY_USERNAME=your_proxy_username
ROYAL_PROXY_PASSWORD=your_proxy_password
ROYAL_PROXY_API_TOKEN=your_proxy_api_token

# ========================================
# Service-to-Service Authentication (Future)
# ========================================
# JWT_SECRET_KEY=your_secret_key_here
# JWT_ALGORITHM=HS256
# JWT_EXPIRATION_MINUTES=60

# ========================================
# Development Settings
# ========================================
ENVIRONMENT=development
DEBUG=true
